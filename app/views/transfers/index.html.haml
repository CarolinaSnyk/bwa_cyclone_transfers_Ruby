.row
  %aside.span4
    %section
      =image_tag("/mysteryman.jpg", :class => "gravatar")
      %h1= current_user.name

  .span8
    ~ unless !current_user?(@user)
      = render 'transfer_form'
      %h1 Transfers I've Received
      -if @transfers_to_me.any?
        Transfer History:  
        ~@transfers_to_me.count
        %ol.transfers
          ~render 'transfers_to_me'


      %h1 Transfers I've Made
      -if @user.transfers.any?
        Transfer History:  
        ~@user.transfers.count
        Listed
      
      %ol.transfers
        ~render @transfers
